<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
        if (ViewBag.jobs != null)
        {
            <table class="job-listing">
                @foreach (var job in ViewBag.jobs)
                {
                    <tr>
                        <td>ID: @job.Id</td>
                        <td>Name: @job.Name</td>
                        <td>Employer: <a asp-controller="List" asp-action="Jobs" asp-route-column="employer" asp-route-value="@job.Employer">@job.Employer</a></td>
                        <td>Location: <a asp-controller="List" asp-action="Jobs" asp-route-column="location" asp-route-value="@job.Location">@job.Location</a></td>
                        <td>Position Type: <a asp-controller="List" asp-action="Jobs" asp-route-column="positionType" asp-route-value="@job.PositionType">@job.PositionType</a></td>
                        <td>Core Competency: <a asp-controller="List" asp-action="Jobs" asp-route-column="coreCompetency" asp-route-value="@job.CoreCompetency">@job.CoreCompetency</a></td>
                    </tr>
                }
            </table>
        }
        <!--else
        {-->
            @*<table class="job-listing">
                    <td>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="All" asp-route-value="all">View All</a>
                    </td>
                </table>*@
        <!--}-->
    }

</div>

